---
import Layout from "../../layouts/Layout.astro";
import ArticleCard from "../../components/ArticleCard.astro";
import H1 from "../../components/H1.astro";
import { articles } from "../../data/articles";

const sortedArticles = [...articles].sort(
  (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()
);
---

<Layout
  title="記事一覧 | シピルカくん集会"
  description="シピルカくん集会のブログ記事一覧です。"
>
  <section
    class="rounded-[20px] border border-[rgba(255,255,255,0.3)] bg-[rgba(255,255,255,0.9)] p-6 shadow-[0_18px_42px_rgba(0,26,77,0.14),inset_0_0_0_0.5px_rgba(12,51,136,0.15)] max-[720px]:p-5"
  >
    <H1
      class="mt-[0.2rem] mb-4 text-[4rem] font-bold leading-[1.3] text-[#0b1d3f]"
    >
      記事一覧
    </H1>
    <div class="grid gap-[0.85rem]">
      {sortedArticles.map((article) => <ArticleCard article={article} />)}
    </div>
  </section>
</Layout>
