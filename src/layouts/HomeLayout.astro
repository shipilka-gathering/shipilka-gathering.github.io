---
const {
  title = "シピルカくん集会",
  description = "Shipilka Gathering のお知らせサイト",
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="bg-gradients" aria-hidden="true"></div>

    <slot />

    <footer class="site-footer">
      <div
        style="display: flex; justify-content: center; gap: 2rem; padding: 2.5%;"
      >
        <div>
          <h2>シピルカくん集会</h2>
        </div>
        <div>
          <h2>言語</h2>
          <div>
            日本語
          </div>
        </div>
        <div>
          <h2>ソーシャルメディア</h2>
          <div>
            <a href="https://vrc.group/SIPILK.2143">VRChatグループ ↗</a>
          </div>
          <div>
            <a href="https://x.com/Shipilka_club">Twitter ↗</a>
          </div>
          <div>
            <a href="https://discord.com/invite/MzXx8RjCuw">Discord ↗</a>
          </div>
        </div>
        <div>
          <h2>サイト</h2>
          <div>
            <a href="/events/">イベント一覧</a>
          </div>
          <div>
            <a href="/articles/">記事一覧</a>
          </div>
        </div>
      </div>
      <div class="footer-logo-container">
        <img
          class="footer-logo"
          src="/images/logo.svg"
          alt="シピルカくん集会のロゴ"
          loading="lazy"
        />
      </div>
    </footer>
  </body>

  <style is:global>
    :root {
      --bg: #0c3388;
      --bg-dark: #06245f;
      --card: #f8f9fa;
      --ink: #0b1d3f;
      --ink-80: rgba(11, 29, 63, 0.8);
      --ink-10: #f2f5ff;
      --muted: #34558f;
      --accent: #f4c21f;
      --radius: 20px;
      font-family:
        "Noto Sans JP",
        "Space Grotesk",
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        sans-serif;
      background-color: var(--bg);
      color: var(--ink);
    }

    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      min-height: 100vh;
      background: linear-gradient(#04618f 0%, #1a4da0 50%);
      color: var(--ink);
    }

    a {
      color: var(--ink);
    }

    .bg-gradients {
      position: fixed;
      inset: 0;
      background:
        radial-gradient(
          circle at 15% 30%,
          rgba(244, 194, 31, 0.12),
          transparent 30%
        ),
        radial-gradient(
          circle at 90% 10%,
          rgba(255, 255, 255, 0.12),
          transparent 35%
        ),
        radial-gradient(
          circle at 80% 70%,
          rgba(12, 51, 136, 0.25),
          transparent 40%
        );
      z-index: 0;
      pointer-events: none;
    }

    .page-shell {
      position: relative;
      z-index: 1;
      max-width: 90%;
      margin: 0 auto;
      padding: 1.5rem 1.5rem 3rem;
      display: flex;
      flex-direction: column;
      gap: 10rem;
    }

    .site-header {
      position: absolute;
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 3rem 3rem;
      width: 100%;
      background: linear-gradient(
        to top,
        transparent 0%,
        rgba(0, 0, 0, 0.5) 100%
      );
      z-index: 10;
    }

    .brand {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      text-decoration: none;
      color: inherit;
    }

    .brand img {
      height: 52px;
      width: auto;
      object-fit: contain;
    }

    .brand-title {
      font-weight: 700;
      font-size: 1.1rem;
    }

    nav {
      margin-left: auto;
      display: inline-flex;
      gap: 0.9rem;
    }

    nav a {
      text-decoration: none;
      color: var(--ink-10);
      font-weight: 600;
      padding: 0.4rem 0.65rem;
      border-radius: 10px;
      transition:
        background 0.2s ease,
        transform 0.15s ease;
    }

    nav a:hover {
      background: rgba(12, 51, 136, 0.08);
      transform: translateY(-1px);
    }

    .page-content {
      display: flex;
      flex-direction: column;
    }
    .card {
      background: rgba(255, 255, 255, 0.9);
      border-radius: var(--radius);
      padding: 1.5rem;
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow:
        0 18px 42px rgba(0, 26, 77, 0.14),
        inset 0 0 0 0.5px rgba(12, 51, 136, 0.15);
    }

    .eyebrow {
      font-size: 0.8rem;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      margin: 0;
      color: var(--muted);
      font-weight: 700;
    }

    .pill {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      padding: 0.25rem 0.7rem;
      border-radius: 999px;
      background: rgba(12, 51, 136, 0.12);
      color: var(--ink);
      font-weight: 600;
      font-size: 0.9rem;
    }

    .button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.35rem;
      padding: 1.5rem 2.5rem;
      border-radius: 12px;
      border: 1px solid rgba(255, 255, 255, 0.6);
      background: linear-gradient(120deg, #f4c21f, #ffd773);
      color: #1b1b1b;
      text-decoration: none;
      font-weight: 700;
      font-size: clamp(1rem, 3vw, 2rem);
      box-shadow: 0 10px 20px rgba(244, 194, 31, 0.3);
      transition:
        transform 0.15s ease,
        box-shadow 0.2s ease;
    }

    .button:hover {
      transform: translateY(-1px);
      box-shadow: 0 12px 30px rgba(244, 194, 31, 0.4);
    }

    .button.normal {
      background: rgba(255, 255, 255, 0.9);
      border: 1px solid rgba(12, 51, 136, 0.2);
      color: var(--ink);
      box-shadow: none;
    }

    h1,
    h2,
    h3,
    h4 {
      font-weight: 700;
      line-height: 1.3;
    }

    h1 {
      font-size: 5rem;
    }

    h2 {
      font-size: 4rem;
    }

    h3 {
      font-size: 3rem;
    }

    h4 {
      font-size: 2rem;
    }

    section.rules h2,
    .rule-grid,
    .rule-grid li {
      color: var(--ink-10);
    }

    section.rules {
      margin: auto 10%;
    }

    section.rules h2 {
      text-align: center;
    }

    p {
      color: var(--ink-80);
      line-height: 1.7;
    }

    ul,
    li {
      color: var(--ink-10);
      font-size: 1.5rem;
    }

    .site-footer {
      background: linear-gradient(#5056aa 0%, #1a4da0 75%);
    }

    .site-footer div,
    .site-footer a {
      margin: 0;
      text-align: center;
      color: var(--ink-10);
      line-height: 3;
      text-decoration: none;
    }

    .site-footer h2 {
      font-size: 1.5rem;
      line-height: 2;
      margin: 0;
    }

    .site-footer div.footer-logo-container {
      display: flex;
      justify-content: center;
      padding: 2.5%;
      margin-top: 10em;
      width: 100%;
    }

    img.footer-logo {
      width: 100%;
      height: 80%;
    }

    @media (max-width: 720px) {
      .site-header {
        flex-direction: column;
        align-items: flex-start;
      }

      nav {
        width: 100%;
        justify-content: flex-start;
        flex-wrap: wrap;
      }

      .page-shell {
        padding: 1rem 1rem 2.5rem;
      }

      .card {
        padding: 1.25rem;
      }
    }
  </style>
</html>
