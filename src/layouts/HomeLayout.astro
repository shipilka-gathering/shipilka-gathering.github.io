---
import "../styles/global.css";
const {
  title = "シピルカくん集会",
  description = "Shipilka Gathering のお知らせサイト",
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="m-0 min-h-screen text-[#0b1d3f] font-['Noto_Sans_JP','Space_Grotesk',system-ui,-apple-system,BlinkMacSystemFont,'Segoe_UI',sans-serif] [background:linear-gradient(#04618f_0%,#1a4da0_50%)]"
  >
    <div
      class="fixed inset-0 z-0 pointer-events-none [background:radial-gradient(circle_at_15%_30%,rgba(244,194,31,0.12),transparent_30%),radial-gradient(circle_at_90%_10%,rgba(255,255,255,0.12),transparent_35%),radial-gradient(circle_at_80%_70%,rgba(12,51,136,0.25),transparent_40%)]"
      aria-hidden="true"
    >
    </div>

    <slot />

    <footer
      class="bg-[linear-gradient(#5056aa_0%,#1a4da0_75%)] text-center text-[#f2f5ff] leading-[3]"
    >
      <div class="flex justify-center gap-8 p-[2.5%]">
        <div>
          <h2 class="m-0 text-[1.5rem] font-bold leading-[2] text-[#f2f5ff]">
            シピルカくん集会
          </h2>
        </div>
        <div>
          <h2 class="m-0 text-[1.5rem] font-bold leading-[2] text-[#f2f5ff]">
            言語
          </h2>
          <div>日本語</div>
        </div>
        <div>
          <h2 class="m-0 text-[1.5rem] font-bold leading-[2] text-[#f2f5ff]">
            ソーシャルメディア
          </h2>
          <div>
            <a
              class="text-[inherit] no-underline"
              href="https://vrc.group/SIPILK.2143">VRChatグループ ↗</a
            >
          </div>
          <div>
            <a
              class="text-[inherit] no-underline"
              href="https://x.com/Shipilka_club">Twitter ↗</a
            >
          </div>
          <div>
            <a
              class="text-[inherit] no-underline"
              href="https://discord.com/invite/MzXx8RjCuw">Discord ↗</a
            >
          </div>
        </div>
        <div>
          <h2 class="m-0 text-[1.5rem] font-bold leading-[2] text-[#f2f5ff]">
            サイト
          </h2>
          <div>
            <a class="text-[inherit] no-underline" href="/events/"
              >イベント一覧</a
            >
          </div>
          <div>
            <a class="text-[inherit] no-underline" href="/articles/">記事一覧</a
            >
          </div>
        </div>
      </div>
      <div class="mt-[10em] flex w-full justify-center p-[2.5%]">
        <img
          class="h-[80%] w-full"
          src="/images/logo.svg"
          alt="シピルカくん集会のロゴ"
          loading="lazy"
        />
      </div>
    </footer>
  </body>
</html>
