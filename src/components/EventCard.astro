---
import type { Event } from "../data/events";

const { event, compact = true } = Astro.props as {
  event: Event;
  compact?: boolean;
};

const date = new Date(event.date);
const formattedDate = date.toLocaleDateString("ja-JP", {
  year: "numeric",
  month: "short",
  day: "numeric",
  weekday: "short",
  timeZone: "Asia/Tokyo",
});
---

<article class={`event-card ${compact ? "compact" : ""}`}>
  <div class="event-meta">
    <p class="eyebrow">イベント</p>
    <p class="date">{formattedDate}</p>
  </div>
  <div class="event-body">
    <h3><a href={`/events/${event.slug}/`}>{event.title}</a></h3>
    {event.description && <p class="lead">{event.description}</p>}

    {
      event.tags && (
        <div class="tags">
          {event.tags.map((tag) => (
            <span class="pill" aria-label={`タグ: ${tag}`}>
              {tag}
            </span>
          ))}
        </div>
      )
    }
  </div>
</article>

<style>
  .event-card {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1rem 1.5rem;
    padding: 1.5rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.35);
    box-shadow:
      0 15px 40px rgba(0, 26, 77, 0.12),
      inset 0 0 0 0.5px rgba(12, 51, 136, 0.15);
  }

  .event-card.compact {
    padding: 1.1rem 1.25rem;
  }

  .event-meta {
    min-width: 140px;
  }

  .date {
    margin: 0.1rem 0 0;
    color: var(--muted);
    font-weight: 600;
  }

  .event-body {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  h3 {
    margin: 0;
    font-size: 1.1rem;
  }

  h3 a {
    color: inherit;
    text-decoration: none;
  }

  h3 a:hover {
    text-decoration: underline;
  }

  .lead {
    margin: 0;
    color: var(--ink-80);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  @media (max-width: 680px) {
    .event-card {
      grid-template-columns: 1fr;
    }

    .event-meta {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
  }
</style>
